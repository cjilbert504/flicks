<header>
  <h1>Sign In</h1>
</header>

<%= form_tag(session_path) do %>
  <fieldset>
    <ol>
      <li>
        <%= label_tag :email_or_username %>
        <%= text_field_tag :email_or_username, nil, autofocus: true, required: true %>
      </li>
			<li>
				<%= label_tag :password %>
				<%= password_field_tag :password, nil, required: true %>
			</li>
			<li>
				<%= submit_tag "Sign In" %>
			</li>
    </ol>
  </fieldset>
<% end %>
<p>
  Don't have an account? <%= link_to "Sign Up", signup_path %>
</p>